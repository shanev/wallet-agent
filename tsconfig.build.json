{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// Override for build
		"module": "ES2022",
		"moduleResolution": "node",
		"noEmit": false,
		"outDir": "./dist",
		"allowImportingTsExtensions": false,
		
		// Emit options
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": true,
		
		// Ensure we catch all errors during build
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
