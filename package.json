{
	"name": "wallet-agent",
	"version": "0.1.0",
	"description": "MCP server for Web3 wallet interactions on EVM-compatible chains using Wagmi",
	"keywords": [
		"mcp",
		"model-context-protocol",
		"wallet",
		"web3",
		"wagmi",
		"evm",
		"ethereum",
		"polygon",
		"blockchain"
	],
	"author": "Shane Vitarana",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/shanev/wallet-agent.git"
	},
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"wallet-agent": "./dist/index.js"
	},
	"files": [
		"dist/**/*",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node",
		"dev": "bun run src/index.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "biome check --apply .",
		"prepare": "simple-git-hooks",
		"prepublishOnly": "bun run build"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run typecheck && bun run format && bun run lint"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@playwright/test": "^1.54.2",
		"@types/bun": "latest",
		"playwright": "^1.54.2",
		"simple-git-hooks": "^2.13.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.1",
		"@wagmi/connectors": "^5.9.1",
		"@wagmi/core": "^2.18.1",
		"viem": "2.x",
		"zod": "^4.0.14"
	}
}
