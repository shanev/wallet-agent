		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "biome check --apply ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/bun": "latest",
		"@types/node": "^24.1.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.1",
		"@tanstack/react-query": "^5.84.1",
		"@wagmi/connectors": "^5.9.1",
		"@wagmi/core": "^2.18.1",
		"playwright": "^1.54.2",
		"viem": "2.x",
		"wagmi": "^2.16.1"
	}
}
